{
    // Using this file, you can configure various tasks that run during the build process.
    // This specifically is used to run manim from the vscode terminal to efficiently render animations.


    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "manim ${relativeFile} -p --renderer=opengl --enable_gui ",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}